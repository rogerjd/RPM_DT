@page

@using System.Data;

@model RPM_DT.Pages.MoviesModel

@{
    ViewData["Title"] = "Movies";
}

<h1>Movies</h1>
Number of movies @Model.Movie.Rows.Count
<br />

<a asp-page="Create">Create New</a>

<table cellpadding="4" cellspacing="4">
    <tr>
        <th>Title</th>
        <th>Genre</th>
        <th>Price</th>
        <th>Release Date</th>
        <th>Rating</th>
    </tr>
    @foreach (DataRow row in Model.Movie.Rows)
    {
        <tr>
            <td>@row["Title"]</td>
            <td>@row["Genre"]</td>
            <td>@row["Price"]</td>
            <td>@getDate(row["ReleaseDate"])</td>
            <td>@row["Rating"]</td>
        </tr>
    }
</table>

@functions{
    string getDate(object obj)
    {
        if (obj is DateTime dt)
        {
            return dt.ToShortDateString();
        }
        else
        {
            return "";
        }
    }
}