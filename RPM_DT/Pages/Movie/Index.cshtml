@page

@using System.Data;
@using Funcs;

@model RPM_DT.Pages.MoviesModel

@{
    ViewData["Title"] = "Movies";
}

<h1>Movies</h1>
Number of movies @Model.Movie.Rows.Count
<br />

<a asp-page="Create">Create New</a>

<table cellpadding="4" cellspacing="4">
    <tr>
        <th>Title</th>
        <th>Genre</th>
        <th>Price</th>
        <th>Release Date</th>
        <th>Rating</th>
    </tr>
    @foreach (DataRow row in Model.Movie.Rows)
    {
<tr>
    <td>@row["Title"]</td>
    <td>@row["Genre"]</td>
    <td>@row["Price"]</td>
    <td>@Util.GetFmtdDate(row["ReleaseDate"])</td>
    <td>@row["Rating"]</td>
    <td>
        <a asp-page="Edit" asp-route-id="@row["ID"]">Edit</a> |
    </td>
</tr>
    }
</table>

